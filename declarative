pipeline {
    agent any
    stages {
        stage('display buildNumber...') {
            steps {
                echo "Build Number: ${currentBuild.buildNumber}"
                sh "echo \"${currentBuild.buildNumber} - Build started\""
            }
        }
        stage('display env object...') {
            steps {
                echo "Env BUILD_ID: ${env.BUILD_ID}"
                sh echo env.BUILD_ID
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building the project...."'
            }
        }
    }
}
